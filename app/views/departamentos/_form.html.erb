<%= form_with(model: departamento, local: true) do |form| %>
  <% if departamento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(departamento.errors.count, "error") %> prohibited this departamento from being saved:</h2>

      <ul>
      <% departamento.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome %>
    <%= form.text_field :nome, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.label :orgao_id, "Órgão" %>
    <%= form.select :orgao_id, Orgao.all.select {|orgao| orgao.id != form.object.id}.collect {|orgao| [orgao.nome.titleize, orgao.id]}, {include_blank: 'Selecione um Órgão'}, { class: 'form-control' } %>
  </div>

  <div class="actions">
    <%= form.submit "Salvar", class: "btn btn-success btn-block" %>
  </div>
<% end %>
