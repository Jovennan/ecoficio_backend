<p id="notice"><%= notice %></p>
<div class="table-responsive">
<h1>Departamentos <%= link_to 'Novo Departamento', new_departamento_path, class: 'btn btn-lg btn-primary' %></h1>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Orgao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.nome %></td>
        <td><%= departamento.orgao %></td>
        <td><%= link_to 'Show', departamento %></td>
        <td><%= link_to 'Edit', edit_departamento_path(departamento) %></td>
        <td><%= link_to 'Destroy', departamento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


