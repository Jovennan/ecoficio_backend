
<div class="form-group has-feedback">
  <%= f.label :email %>
  <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
</div>

<div class="form-group has-feedback">
  <%= f.label :nome %>
  <%= f.text_field :nome, class: 'form-control', placeholder: 'Nome' %>
</div>

<div class="form-group has-feedback">
  <%= f.label :cpf %>
  <%= f.text_field :cpf, class: 'form-control', placeholder: 'CPF' %>
</div>

<div class="form-group has-feedback">
  <%= f.label :cargo %>
  <%= f.text_field :cargo, class: 'form-control', placeholder: 'Cargo' %>
</div>

<div class="form-group has-feedback">
  <%= f.label :departamento_id, "Local de Trabalho" %>
  <%= f.select :departamento_id, Departamento.all.collect {|departamento| [departamento.nome.titleize, departamento.id]}, {include_blank: 'Selecione um Departamento'}, { class: 'form-control' } %>
</div>
