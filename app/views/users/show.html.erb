

    <div class="row">

        <div class="col-md-12">

          <div class="box box-primary">
              <div class="box-body box-profile">
                  <%= image_tag 'account-circle.png', class: 'profile-user-img img-responsive img-circle' %>

                      <h3 class="profile-username text-center">
                          <%= @user.nome %>
                      </h3>

                      <ul class="list-group list-group-unbordered">
                          <li class="list-group-item">
                              <b>CPF:</b> <%= @user.cpf %>
                          </li>
                
                          <li class="list-group-item">
                              <b>Email</b> <span class="pull-right"><%= @user.email if @user.email.present? %></span>
                          </li>
                          <li class="list-group-item">
                              <b>Local de Trabalho</b> <span class="pull-right"><%= " #{@user.departamento.orgao.nome} - #{@user.departamento.nome}" if @user.departamento.present? %></span>
                          </li>
                      </ul>
              </div>
              <%= link_to "Editar", edit_user_path(current_user), method: :get %>
              edit_user_path
              <!-- /.box-body -->
          </div>

        </div>
    </div>
