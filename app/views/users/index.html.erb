<table class="table table-bordered">
          <thead>
            <tr>
              <th style="width: 10px">#</th>
              <th>Nome Completo</th>
              <th>E-mail</th>
              <th>CPF</th>
              <th>Cargo</th>
              <th>Órgão</th>
              <th>Departamento</th>
              <th colspan="3">Ações</th>
            </tr>
          </thead>

          <tbody>
            <% if @users.empty? %>
              <tr>
                <td colspan="5" style="text-align: center">
                  <h3>Nenhum usuário encontrado.</h3>
                </td>
              </tr>
            <% end %>
            <% @users.each_with_index do |user, index| %>
              <tr>
                <td>
                  <%= index+1 %>
                </td>
                <td class="col-xs-3">
                  <%= "#{user.nome}" %>
                </td>
                <td class="col-xs-2">
                  <%= user.email if user.email.present? %>
                </td>
                <td class="col-xs-1">
                  <%= user.cpf if user.cpf.present? %>
                </td>
                <td class="col-xs-1">
                  <%= user.cargo if user.cargo.present? %>
                </td>
                <td class="col-xs-1">
                  <%= user.departamento.orgao.nome if user.departamento.present? %>
                </td>
                <td class="col-xs-1">
                  <%= user.departamento.nome if user.departamento.present? %>
                </td>
                
                <td class="col-xs-1">
                  <%= link_to user_path(user) do %>
                  <i class="fa fa-2x fa-eye"> Visualizar</i>
                <% end %>
              </td>
              <td class="col-xs-1">
                <%= link_to edit_user_path(user) do %>
                <i class="fa fa-2x fa-edit">Editar</i>
              <% end %>
            </td>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>