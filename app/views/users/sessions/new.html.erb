<style type="text/css">
  .form-signin {
  width: 100%;
  max-width: 330px;
  padding: 15px;
  margin: auto;
}
.form-signin .checkbox {
  font-weight: 400;
}
.form-signin .form-control {
  position: relative;
  box-sizing: border-box;
  height: auto;
  padding: 10px;
  font-size: 16px;
}
.form-signin .form-control:focus {
  z-index: 2;
}
.form-signin input[type="email"] {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}
.form-signin input[type="password"] {
  margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}
</style>

<div class="form-signin">
  <h1 class="h3 mb-3 font-weight-normal">Entre com suas Credenciais</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group has-feedback">
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
  </div>

  <div class="form-group has-feedback">
    <%= f.password_field :password, class: 'form-control', placeholder: 'Senha' %>
    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
  </div>

  <div class="row">
      <%= f.submit 'Entrar', class: 'btn btn-lg btn-primary btn-block' %>
  </div>
  <% end %>
  <div class="row">
  <%= link_to 'Esqueceu sua senha? clique aqui', new_user_password_path %> || 
  <%= link_to 'Cadastre-se', new_user_registration_path %>
</div>
</div>

